<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:background="#E1E6F6"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.js.views.CustomImgContainer
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#AA333333">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#FF4444"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00ff00"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000ff"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

        </com.js.views.CustomImgContainer>

        <com.js.views.CustomImgContainer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#AA333333">

            <TextView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#E5ED05"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#00ff00"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#0000ff"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </com.js.views.CustomImgContainer>

        <com.js.views.FlowLayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_flag_01"
                android:text="welcome"/>

            <TextView
                style="@style/text_flag_01"
                android:text="Jorelanbo"/>

            <TextView
                style="@style/text_flag_01"
                android:text="js"/>

            <TextView
                style="@style/text_flag_01"
                android:text="JohnRainbow"/>

            <TextView
                style="@style/text_flag_01"
                android:text="IT"/>

            <TextView
                style="@style/text_flag_01"
                android:text="jintiantianqizhenhaoya"/>

            <TextView
                style="@style/text_flag_01"
                android:text="GO"/>

            <TextView
                style="@style/text_flag_01"
                android:text="now"/>

            <TextView
                style="@style/text_flag_01"
                android:text="ZZZZZZZZZZZZ"/>

        </com.js.views.FlowLayout.FlowLayout>

        <com.js.views.FlowLayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/text_flag_01"
                android:background="@drawable/flag_02"
                android:textColor="#888888"
                android:text="welcome"/>

            <TextView
                style="@style/text_flag_01"
                android:background="@drawable/flag_02"
                android:textColor="#888888"
